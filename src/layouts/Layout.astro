---
import '../styles/styles.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
	title?: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const mainTitle = 'Manuel Hamel Photography';
const pageTitle = title ? `${title} | ${mainTitle}` : mainTitle;
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="HandheldFriendly" content="false" />
		<meta name="color-scheme" content="dark light" />
		<meta name="theme-color" content="#4d4a42" media="(prefers-color-scheme: dark)" />
		<meta name="theme-color" content="#ded3c0" media="(prefers-color-scheme: light)" />
		<meta name="msapplication-TileColor" content="#4d4a42" />
		<link rel="manifest" href="/manifest.webmanifest" />

		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="author" content="Manuel Hamel" />
		<meta
			name="keywords"
			content={t('meta.keywords')}
		/>
		<!-- TODO: Update descriptkeywordsion -->
		<meta
			name="description"
			content={t('meta.description')}
		/>
		<!-- TODO: Update description -->
		<meta name="copyright" content={`Â© 2020-${currentYear} Manuel Hamel Photography`} />

		<meta name="robots" content="index, follow" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Performance -->
		<link rel="dns-prefetch" href="//static.cloudflareinsights.com" />

		<!-- Icons -->
		<link rel="icon" type="image/svg+xml" href="/assets/icons/favicon.svg" />
		<link rel="icon" type="image/png" href="/assets/icons/favicon.png" />
		<link rel="apple-touch-icon" href="assets/icons/apple-touch-icon.png" />

		<!--Open Graph-->
		<meta property="og:title" content="Manuel Hamel Photography" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mh-photography.com" />
		<meta
			property="og:description"
			content={t('meta.description')}
		/>
		<!-- TODO: Replace image -->
		<meta property="og:image" content="https://mh-photography.com/assets/social.jpg" />
		<meta property="og:image:width" content="1280" />
		<meta property="og:image:height" content="640" />

		<!--Twitter Card-->
		<meta name="twitter:card" content="https://alpha.mh-photography-com.pages.dev/" />
		<meta name="twitter:title" content="Manuel Hamel Photography" />
		<meta property="twitter:domain" content="mh-photography.com" />
		<meta property="twitter:url" content="https://mh-photography.com/" />
		<meta
			name="twitter:description"
			content={t('meta.description')}
		/>
		<meta name="twitter:url" content="https://mh-photography.com" />
		<!-- TODO: Replace image -->
		<meta name="twitter:image" content="https://mh-photography.com/assets/social.jpg" />

		<!-- Geolocation -->
		<meta name="geo.region" content="ES" />
		<meta name="geo.placename" content="Barcelona" />
		<meta name="geo.position" content="41.3814424;2.1568902" />
		<meta name="ICBM" content="41.3814424, 2.1568902" />
	</head>
	<body>
		<slot />
	</body>
</html>
