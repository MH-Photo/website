---
import { getLangFromUrl, getRouteFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

interface Props {
	path?: string;
}

const { path } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const route = getRouteFromUrl(Astro.url);
---


<section id="photos">
	<h2 class="screen-reader-text">{t('photos.title')}</h2>
	<a href={translatePath(`/${route ? route : 'albums/weddings'}`, lang)} class="primary">
		<h3>{t('photos.weddings')}</h3>
		<picture>
			<source
				srcset="/assets/img/albums/weddings-400.avif 450w, /assets/img/albums/weddings-1920.avif"
				type="image/avif"
			/>
			<source
				srcset="/assets/img/albums/weddings-400.webp 450w, /assets/img/albums/weddings-1920.webp"
				type="image/webp"
			/>
			<source
				srcset="/assets/img/albums/weddings-400.jpg 450w, /assets/img/albums/weddings-1920.jpg"
				type="image/jpg"
			/>
			<img src="/assets/img/albums/weddings-400.jpg" width="6240" height="4160" loading="lazy" alt="" />
		</picture>
	</a>
	<a href={translatePath(`/${route ? route : 'albums/people'}`, lang)} class="primary">
		<h3>{t('photos.people')}</h3>
		<picture>
			<source
				srcset="/assets/img/albums/people-and-lifestyle-400.avif 450w, /assets/img/albums/people-and-lifestyle-1920.avif"
				type="image/avif"
			/>
			<source
				srcset="/assets/img/albums/people-and-lifestyle-400.webp 450w, /assets/img/albums/people-and-lifestyle-1920.webp"
				type="image/webp"
			/>
